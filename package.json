{
  "name": "numcodecs",
  "author": "Trevor James Manz",
  "version": "0.1.0",
  "description": "Buffer compression and transformation codecs for use in data storage and communication applications.",
  "types": "dist/types/src/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./gzip": {
      "import": "./dist/gzip.mjs",
      "require": "./dist/gzip.cjs"
    },
    "./zlib": {
      "import": "./dist/zlib.mjs",
      "require": "./dist/zlib.cjs"
    },
    "./blosc": {
      "import": "./dist/blosc.mjs",
      "require": "./dist/blosc.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manzt/numcodecs.js.git"
  },
  "scripts": {
    "build": "rollup -c",
    "prebuild": "rm -rf dist",
    "lint": "tsc --noEmit && eslint ./src/**/*.ts --quiet --fix",
    "format": "./node_modules/.bin/prettier --write src/**/*.ts",
    "format:check": "./node_modules/.bin/prettier --check src/**/*.ts",
    "start": "rollup -c -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run format:check && npm run test -- --no-cache"
  },
  "keywords": [
    "zarr",
    "compression",
    "codecs",
    "storage"
  ],
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/jest": "^25.2.1",
    "@types/pako": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "jest": "^25.0.0",
    "prettier": "2.0.5",
    "rollup": "^2.7.6",
    "rollup-plugin-terser": "^5.3.0",
    "ts-jest": "^25.4.0",
    "tslib": "^1.11.1",
    "typescript": "^3.9.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/{!(types|errors|index),}.ts"
    ],
    "transform": {
      "\\.(ts|js)$": "ts-jest"
    }
  },
  "dependencies": {
    "pako": "^1.0.11"
  }
}
